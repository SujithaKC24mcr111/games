                {symbol: "U", name: "Uranium", number: 92, mass: 238.03, group: 3, period: 7, category: "actinide", description: "Uranium is a silvery-gray metal in the actinide series. It is weakly radioactive and occurs naturally in low concentrations in soil, rock and water."},
                {symbol: "Np", name: "Neptunium", number: 93, mass: 237, group: 3, period: 7, category: "actinide", description: "Neptunium is a radioactive actinide metal. It is the first transuranic element and is used in neutron detection equipment."},
                {symbol: "Pu", name: "Plutonium", number: 94, mass: 244, group: 3, period: 7, category: "actinide", description: "Plutonium is a radioactive actinide metal. It is used in nuclear weapons and as a fuel in some nuclear reactors."},
                {symbol: "Am", name: "Americium", number: 95, mass: 243, group: 3, period: 7, category: "actinide", description: "Americium is a radioactive transuranic chemical element. It is used in smoke detectors and as a neutron source in industrial gauges."},
                {symbol: "Cm", name: "Curium", number: 96, mass: 247, group: 3, period: 7, category: "actinide", description: "Curium is a hard, dense, silvery metal. It is highly radioactive and is used primarily for scientific research purposes."},
                {symbol: "Bk", name: "Berkelium", number: 97, mass: 247, group: 3, period: 7, category: "actinide", description: "Berkelium is a radioactive metallic element. It is produced in minute amounts and has no commercial applications."},
                {symbol: "Cf", name: "Californium", number: 98, mass: 251, group: 3, period: 7, category: "actinide", description: "Californium is a radioactive metallic chemical element. It is used as a neutron source in nuclear reactors and in neutron moisture gauges."},
                {symbol: "Es", name: "Einsteinium", number: 99, mass: 252, group: 3, period: 7, category: "actinide", description: "Einsteinium is a synthetic element. It is highly radioactive and has only been produced in minute quantities for research purposes."},
                {symbol: "Fm", name: "Fermium", number: 100, mass: 257, group: 3, period: 7, category: "actinide", description: "Fermium is a synthetic element. It is highly radioactive and has only been produced in minute quantities for research purposes."},
                {symbol: "Md", name: "Mendelevium", number: 101, mass: 258, group: 3, period: 7, category: "actinide", description: "Mendelevium is a synthetic element. It is highly radioactive and has only been produced in minute quantities for research purposes."},
                {symbol: "No", name: "Nobelium", number: 102, mass: 259, group: 3, period: 7, category: "actinide", description: "Nobelium is a synthetic chemical element. It is highly radioactive and has only been produced in minute quantities for research purposes."},
                {symbol: "Lr", name: "Lawrencium", number: 103, mass: 266, group: 3, period: 7, category: "actinide", description: "Lawrencium is a synthetic chemical element. It is highly radioactive and has only been produced in minute quantities for research purposes."}
            ];

            // Quiz questions
            const quizQuestions = [
                {
                    question: "Which element has the chemical symbol 'O'?",
                    options: ["Osmium", "Oxygen", "Oganesson", "Oxonium"],
                    answer: 1
                },
                {
                    question: "What is the atomic number of Carbon?",
                    options: ["6", "12", "14", "8"],
                    answer: 0
                },
                {
                    question: "Which of these is a noble gas?",
                    options: ["Chlorine", "Helium", "Nitrogen", "Oxygen"],
                    answer: 1
                },
                {
                    question: "Which element is the most abundant in the Earth's atmosphere?",
                    options: ["Oxygen", "Carbon", "Nitrogen", "Hydrogen"],
                    answer: 2
                },
                {
                    question: "What is the chemical symbol for Gold?",
                    options: ["Go", "Gd", "Au", "Ag"],
                    answer: 2
                },
                {
                    question: "Which element has the highest melting point?",
                    options: ["Tungsten", "Iron", "Titanium", "Carbon"],
                    answer: 0
                },
                {
                    question: "What is the lightest element?",
                    options: ["Helium", "Hydrogen", "Lithium", "Oxygen"],
                    answer: 1
                },
                {
                    question: "Which element is liquid at room temperature?",
                    options: ["Bromine", "Chlorine", "Iodine", "Fluorine"],
                    answer: 0
                }
            ];

            // DOM elements
            const navButtons = document.querySelectorAll('.nav-btn');
            const screens = document.querySelectorAll('.screen');
            const periodicTable = document.getElementById('periodic-table');
            const lanthanideTable = document.getElementById('lanthanide-table');
            const actinideTable = document.getElementById('actinide-table');
            const elementDetails = document.getElementById('element-details');
            const questionElement = document.getElementById('question');
            const optionsElement = document.getElementById('options');
            const feedbackElement = document.getElementById('feedback');
            const nextButton = document.getElementById('next-btn');
            const scoreElement = document.getElementById('score');

            // Navigation
            navButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const target = button.getAttribute('data-target');
                    
                    // Update active button
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    // Show target screen
                    screens.forEach(screen => screen.classList.remove('active'));
                    document.getElementById(target).classList.add('active');
                    
                    // If switching to quiz, reset it
                    if (target === 'quiz') {
                        resetQuiz();
                    }
                });
            });

            // Generate periodic table
            function generatePeriodicTable() {
                // Clear the table
                periodicTable.innerHTML = '';
                
                // Create empty cells for the entire table
                for (let i = 0; i < 18 * 7; i++) {
                    const cell = document.createElement('div');
                    cell.className = 'empty-cell';
                    periodicTable.appendChild(cell);
                }
                
                // Place elements in their correct positions
                elements.forEach(element => {
                    const position = (element.period - 1) * 18 + (element.group - 1);
                    const cell = periodicTable.children[position];
                    
                    if (cell) {
                        cell.className = `element ${element.category}`;
                        cell.innerHTML = `
                            <div class="number">${element.number}</div>
                            <div class="symbol">${element.symbol}</div>
                            <div class="name">${element.name}</div>
                            <div class="mass">${element.mass}</div>
                        `;
                        
                        // Add click event to show element details
                        cell.addEventListener('click', () => showElementDetails(element));
                        
                        // Set color based on category
                        setElementColor(cell, element.category);
                    }
                });

                // Generate lanthanide series
                lanthanides.forEach(element => {
                    const cell = document.createElement('div');
                    cell.className = `element ${element.category}`;
                    cell.innerHTML = `
                        <div class="number">${element.number}</div>
                        <div class="symbol">${element.symbol}</div>
                        <div class="name">${element.name}</div>
                        <div class="mass">${element.mass}</div>
                    `;
                    
                    // Add click event to show element details
                    cell.addEventListener('click', () => showElementDetails(element));
                    
                    // Set color based on category
                    setElementColor(cell, element.category);
                    
                    lanthanideTable.appendChild(cell);
                });

                // Generate actinide series
                actinides.forEach(element => {
                    const cell = document.createElement('div');
                    cell.className = `element ${element.category}`;
                    cell.innerHTML = `
                        <div class="number">${element.number}</div>
                        <div class="symbol">${element.symbol}</div>
                        <div class="name">${element.name}</div>
                        <div class="mass">${element.mass}</div>
                    `;
                    
                    // Add click event to show element details
                    cell.addEventListener('click', () => showElementDetails(element));
                    
                    // Set color based on category
                    setElementColor(cell, element.category);
                    
                    actinideTable.appendChild(cell);
                });
            }

            // Set element color based on category
            function setElementColor(element, category) {
                const colors = {
                    'alkali-metal': '#ff9999',
                    'alkaline-earth': '#ffcc99',
                    'transition-metal': '#ffff99',
                    'post-transition': '#99ff99',
                    'metalloid': '#99cc99',
                    'nonmetal': '#99ffff',
                    'halogen': '#cc99ff',
                    'noble-gas': '#ff99ff',
                    'lanthanide': '#ffccff',
                    'actinide': '#ff99cc'
                };
                
                element.style.backgroundColor = colors[category] || '#cccccc';
            }

            // Show element details
            function showElementDetails(element) {
                elementDetails.innerHTML = `
                    <div class="symbol">${element.symbol}</div>
                    <div class="name">${element.name}</div>
                    <div class="info">
                        <div>Atomic Number: ${element.number}</div>
                        <div>Atomic Mass: ${element.mass}</div>
                        <div>Group: ${element.group}</div>
                        <div>Period: ${element.period}</div>
                    </div>
                    <div class="description">${element.description}</div>
                `;
                
                // Scroll to details
                elementDetails.scrollIntoView({ behavior: 'smooth' });
            }

            // Quiz functionality
            let currentQuestion = 0;
            let score = 0;
            let selectedOption = null;

            function resetQuiz() {
                currentQuestion = 0;
                score = 0;
                selectedOption = null;
                feedbackElement.textContent = '';
                feedbackElement.className = 'feedback';
                showQuestion();
                updateScore();
            }

            function showQuestion() {
                const question = quizQuestions[currentQuestion];
                questionElement.textContent = question.question;
                
                optionsElement.innerHTML = '';
                question.options.forEach((option, index) => {
                    const optionElement = document.createElement('div');
                    optionElement.className = 'option';
                    optionElement.textContent = option;
                    optionElement.setAttribute('data-index', index);
                    
                    optionElement.addEventListener('click', () => selectOption(optionElement, index));
                    optionsElement.appendChild(optionElement);
                });
                
                nextButton.textContent = currentQuestion === quizQuestions.length - 1 ? 'Finish Quiz' : 'Next Question';
                feedbackElement.textContent = '';
                feedbackElement.className = 'feedback';
            }

            function selectOption(optionElement, index) {
                // Remove previous selection
                const options = document.querySelectorAll('.option');
                options.forEach(opt => opt.classList.remove('selected'));
                
                // Set new selection
                optionElement.classList.add('selected');
                selectedOption = index;
                
                // Check answer
                const correct = index === quizQuestions[currentQuestion].answer;
                
                // Show feedback
                feedbackElement.textContent = correct ? 'Correct!' : 'Incorrect!';
                feedbackElement.className = `feedback ${correct ? 'correct' : 'incorrect'}`;
                
                // Update score if correct
                if (correct) {
                    score++;
                    updateScore();
                }
            }

            function updateScore() {
                scoreElement.textContent = `Score: ${score}/${quizQuestions.length}`;
            }

            nextButton.addEventListener('click', () => {
                if (selectedOption === null) return;
                
                currentQuestion++;
                
                if (currentQuestion < quizQuestions.length) {
                    selectedOption = null;
                    showQuestion();
                } else {
                    // End of quiz
                    questionElement.textContent = 'Quiz Completed!';
                    optionsElement.innerHTML = '';
                    feedbackElement.textContent = `Your final score: ${score}/${quizQuestions.length}`;
                    feedbackElement.className = 'feedback';
                    nextButton.textContent = 'Restart Quiz';
                    
                    nextButton.addEventListener('click', resetQuiz, { once: true });
                }
            });

            // Initialize the app
            generatePeriodicTable();
            showElementDetails(elements[0]); // Show details for Hydrogen by default
        });
    </script>
</body>
</html>
